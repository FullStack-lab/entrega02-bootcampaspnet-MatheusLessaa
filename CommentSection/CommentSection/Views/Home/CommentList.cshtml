@using CommentSection.Models.Comment
@model List<CommentModel>

<h1>Lista de comentários</h1>


@foreach (var comment in Model)
{
        <ul class="list-group mt-3">
            <li class="list-group-item d-flex justify-content-between align-items-start">
                    <div class="ms-2 me-auto">
                        <div class="fw-bold mr-3">@comment.Title <span class="badge text-bg-primary rounded-pill"></span> </div>
                        @comment.Author postado em @comment.Date
                    </div>
                    <button type="button" class="btn btn-primary" onclick ="window.location.href='@Url.Action("CommentDetailed", "Home", new {id = comment.Id})'">Visualizar Respostas</button>
            </li>
            <li class="list-group-item d-flex justify-content-between align-items-start">
                <div class="row">
                    <p>@comment.Comment</p>
                </div>
            </li>
        </ul>
} 