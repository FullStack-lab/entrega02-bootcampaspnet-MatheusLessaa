@model CommentSection.Models.Comment.Posted

@{
    ViewBag.Title = "Editar Comentário";
}

<!DOCTYPE html>
<html>

<head>
    <meta charset="utf-8" />
    <meta viewport="width=device-width" />
</head>

<body>
    <h1>@ViewBag.Title</h1>

    @using (Html.BeginForm("EditComment", "Post", FormMethod.Post)) //Utiliza um formulário para a edição de comentários presentes no post
    {
        <div class="row">
            <div class="col">
                @Html.TextBoxFor(model => model.Author, new { @class = "form-control", @required = "required", @maxlength = "30", @readonly = "readonly" })
            </div>
        </div>
        <div class="row mt-3">
            <div class="col">
                @Html.TextBoxFor(model => model.Description, new { @class = "form-control", @required = "required", @maxlength = "500" })
            </div>
        </div>
        <button type="submit" class="btn btn-outline-success mt-3">Salvar</button>
        <a class="btn btn-secondary mt-3" href="@Url.Action("PostList", "Post")">Cancelar</a>

    }

</body>

</html>

