@model CommentSection.Models.Comment.Posted

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta viewport="width=device-width" />
</head>

<body>
    @using (Html.BeginForm("Create", "Post", FormMethod.Post)) //Cria através de um formulário um novo post e depois redireciona para o método POST de criação
    {
        <div class="col">
            <div class="form-group">
                @Html.TextBoxFor(model => model.Author, new { @class = "form-control", @required = "required", @maxlength = "30", placeholder = "Nome completo" })
            </div>

            <div class="form-group mt-3">
                @Html.TextAreaFor(model => model.Description, new { @class = "form-control", @required = "required", @maxlength = "500", placeholder = "Descrição" })
            </div>
        </div>

        <button type="submit" class="btn btn-primary mt-3">Comentar</button>
        <a class="btn btn-secondary mt-3" href="@Url.Action("PostList", "Post")">Cancelar</a>

    }
</body>
</html>