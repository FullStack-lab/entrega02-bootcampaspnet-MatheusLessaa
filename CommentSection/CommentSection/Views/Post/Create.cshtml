@model CommentSection.Models.Comment.Posted

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta viewport="width=device-width" />
</head>

<body>
    @using (Html.BeginForm("Create", "Post", FormMethod.Post))
    {
        <div class="col">
            <div class="form-group">
                @Html.TextBoxFor(model => model.Author, new { @class = "form-control", @required = "required", placeholder = "Nome completo" })
            </div>

            <div class="form-group mt-3">
                @Html.TextAreaFor(model => model.Description, new { @class = "form-control", @required = "required", placeholder = "Descrição" })
            </div>
        </div>

        <button type="submit" class="btn btn-primary mt-3">Comentar</button>
    }
</body>
</html>